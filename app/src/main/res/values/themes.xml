<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Pokedex" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->

        <item name="colorPrimary">@color/accent</item>

        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>

        <item name="android:navigationBarColor">
            @color/white
        </item>
<!--        <item name="tintNavigationIcon">@color/cardview_dark_background</item>-->

        <item name="android:windowTranslucentNavigation">false</item>

        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="Theme.Pokedex" parent="Base.Theme.Pokedex" />



    <style name="text_head">
        <item name="android:textColor">@color/text_head_black</item>
    </style>
    <style name="text_sub_head">
        <item name="android:textColor">@color/text_sub_head_black</item>
    </style>
    <style name="text_content">
        <item name="android:textColor">@color/text_content_black</item>
    </style>

    <style name="tint">
        <item name="android:tint">@color/white</item>
        <item name="android:src">@drawable/white_gradient_top_to_bottom</item>
    </style>

    <style name="tint_arrow">
        <item name="android:tint">@color/black</item>
        <item name="android:src">@drawable/ic_arrow_forward</item>
    </style>

    <style name="tint_arrow_up">
        <item name="android:tint">@color/black</item>
<!--        <item name="android:src">@drawable/ic_arrow_up</item>-->
    </style>


    <style name="tint_background">
        <item name="android:tint">@color/white</item>
        <!--        <item name="android:src">@drawable/ic_arrow_up</item>-->
    </style>

    <style name="search_box_background">
        <item name="android:background">@drawable/search_box_background</item>
    </style>

    <style name="tint_next">
        <item name="android:tint">@color/text_content_black</item>
    </style>

    <style name="card_background_profile">
        <item name="android:backgroundTint">@color/card_background_light</item>
    </style>


    <style name="CustomSnackbar" parent="Widget.MaterialComponents.Snackbar">
        <item name="android:textColor">@color/text_sub_head_white</item>
        <item name="android:backgroundTint">@color/black</item>
        <!-- Add more attributes as needed -->
    </style>

</resources>