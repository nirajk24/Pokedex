<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ProfileActivity">

    <ImageView
        android:id="@+id/ivBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:padding="16dp"
        android:elevation="4dp"
        style="@style/tint_arrow_up"
        android:src="@drawable/ic_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


    <TextView
        style="@style/text_sub_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profile"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/ivBack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/ivBack" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/ivBack"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/cvProfilePic"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="1:1"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            app:cardElevation="10dp"
            app:cardCornerRadius="20dp"
            app:layout_constraintEnd_toStartOf="@id/userStats"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">


            <ImageView
                android:id="@+id/ivProfilePic"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#99A98FF3"
                android:src="@drawable/poke" />
        </androidx.cardview.widget.CardView>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/userStats"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:elevation="10dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@id/cvSettings"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/cvProfilePic"
            app:layout_constraintTop_toTopOf="@id/cvProfilePic">

            <com.google.android.material.progressindicator.CircularProgressIndicator
                android:id="@+id/circularProgressIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:progress="80"
                app:indicatorColor="@color/accent"
                app:indicatorSize="65dp"
                app:layout_constraintEnd_toStartOf="@+id/circularProgressIndicator2"
                app:layout_constraintHorizontal_chainStyle="spread"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:trackColor="#65DADADA"
                app:trackCornerRadius="8dp"
                app:trackThickness="7dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:text="11"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/circularProgressIndicator"
                app:layout_constraintEnd_toEndOf="@+id/circularProgressIndicator"
                app:layout_constraintStart_toStartOf="@+id/circularProgressIndicator"
                app:layout_constraintTop_toTopOf="@+id/circularProgressIndicator" />

            <TextView
                style="@style/text_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Level"
                android:textAlignment="center"
                android:textSize="13sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/circularProgressIndicator"
                app:layout_constraintStart_toStartOf="@+id/circularProgressIndicator"
                app:layout_constraintTop_toBottomOf="@id/circularProgressIndicator" />


            <com.google.android.material.progressindicator.CircularProgressIndicator
                android:id="@+id/circularProgressIndicator2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:progress="80"
                app:indicatorColor="@color/accent"
                app:indicatorSize="65dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/circularProgressIndicator"
                app:layout_constraintTop_toTopOf="parent"
                app:trackColor="#65DADADA"
                app:trackCornerRadius="8dp"
                app:trackThickness="7dp" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="120"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="@+id/circularProgressIndicator2"
                app:layout_constraintEnd_toEndOf="@+id/circularProgressIndicator2"
                app:layout_constraintStart_toStartOf="@+id/circularProgressIndicator2"
                app:layout_constraintTop_toTopOf="@+id/circularProgressIndicator2" />

            <TextView
                style="@style/text_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pokemons"
                android:textAlignment="center"
                android:textSize="13sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/circularProgressIndicator2"
                app:layout_constraintStart_toStartOf="@+id/circularProgressIndicator2"
                app:layout_constraintTop_toBottomOf="@id/circularProgressIndicator2" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/tvUsername"
            style="@style/text_sub_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:singleLine="true"
            android:text="Set Your Name"
            android:textAlignment="viewStart"
            android:textSize="22sp"
            android:elevation="10dp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@id/cvSettings"
            app:layout_constraintBottom_toBottomOf="@id/cvProfilePic"
            app:layout_constraintStart_toStartOf="@id/userStats"/>



        <androidx.cardview.widget.CardView
            android:id="@+id/cvSettings"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:cardCornerRadius="16dp"
            android:elevation="0dp"
            android:layout_marginTop="-60dp"
            style="@style/card_background_profile"
            app:layout_constraintTop_toBottomOf="@id/cvProfilePic"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">




            <androidx.constraintlayout.widget.ConstraintLayout
                style="@style/card_background_profile"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


            <View
                android:id="@+id/seperator"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="90dp"
                android:layout_marginHorizontal="24dp"
                app:layout_constraintTop_toTopOf="parent"
                android:background="#7A8C8C8C"/>

            <androidx.core.widget.NestedScrollView
                android:id="@+id/nestedLayout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/seperator"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/layoutAvatar"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="4dp"
                        android:layout_marginHorizontal="24dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_marginEnd="16dp"
                            android:alpha="0.8"
                            android:src="@drawable/avatar_logo"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            style="@style/text_sub_head"
                            android:textSize="16sp"
                            android:text="Choose Avatar"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            style="@style/tint_next"
                            android:src="@drawable/ic_navigate"
                            android:textSize="16sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutTheme"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginHorizontal="24dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_marginEnd="16dp"
                            android:alpha="0.8"
                            android:src="@drawable/theme_icon"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            style="@style/text_sub_head"
                            android:textSize="16sp"
                            android:text="Theme"/>

                        <TextView
                            android:id="@+id/tvThemeValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            style="@style/text_content"
                            android:textSize="16sp"
                            android:text="Dark"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutGrid"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginHorizontal="24dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="30dp"
                            android:layout_marginEnd="16dp"
                            android:layout_gravity="center_vertical|center_horizontal"
                            android:alpha="0.7"
                            android:src="@drawable/layout_icon"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            style="@style/text_sub_head"
                            android:textSize="16sp"
                            android:text="Grid Size"/>

                        <TextView
                            android:id="@+id/tvGridValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            style="@style/text_content"
                            android:textSize="16sp"
                            android:text="1"/>

                    </LinearLayout>



                </LinearLayout>
            </androidx.core.widget.NestedScrollView>



            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>