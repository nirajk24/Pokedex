<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.EvolutionFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardElevation="0dp"
        app:cardCornerRadius="25dp"/>


    <androidx.core.widget.NestedScrollView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="24dp">

            <TextView
                android:id="@+id/layoutNoEvolution"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="34dp"
                style="@style/text_content"
                android:textStyle="bold"
                android:text="No Evolutions"
                android:textAlignment="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="100dp"
                app:layout_constraintTop_toTopOf="@id/tvHead1"
                app:layout_constraintBottom_toBottomOf="parent"/>


            <TextView
                android:id="@+id/tvHead1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Evolutions"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <LinearLayout
                android:id="@+id/layoutEvolution1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvHead1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="140dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="140dp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentEnd="true"
                            android:src="@drawable/pokeball"
                            android:alpha="0.3"
                            app:tint="#AEAEAE" />

                        <ImageView
                            android:id="@+id/ivPokemon1"
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginVertical="10dp"
                            android:scaleType="fitCenter" />
                    </RelativeLayout>



                    <TextView
                        android:id="@+id/tvPokemonName1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/text_sub_head"
                        android:textSize="17sp"
                        android:textAlignment="center"
                        android:text="Charmander"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        style="@style/tint_arrow"
                        android:scaleType="center"/>

                    <TextView
                        android:id="@+id/tvReason1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/text_sub_head"
                        android:textSize="16sp"
                        android:textAlignment="center"
                        android:text="Level 16"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="140dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="140dp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentEnd="true"
                            android:src="@drawable/pokeball"
                            android:alpha="0.3"
                            app:tint="#AEAEAE" />

                        <ImageView
                            android:id="@+id/ivPokemon2"
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginVertical="10dp"
                            android:scaleType="fitCenter" />



                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tvPokemonName2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/text_sub_head"
                        android:textSize="17sp"
                        android:textAlignment="center"
                        android:text="Charmander"/>

                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:id="@+id/layoutEvolution2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/layoutEvolution1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="140dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="140dp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentEnd="true"
                            android:src="@drawable/pokeball"
                            android:alpha="0.3"
                            app:tint="#AEAEAE" />

                        <ImageView
                            android:id="@+id/ivPokemon3"
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginVertical="10dp"
                            android:scaleType="fitCenter" />
                    </RelativeLayout>



                    <TextView
                        android:id="@+id/tvPokemonName3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/text_sub_head"
                        android:textSize="16sp"
                        android:textAlignment="center"
                        android:text="Charmander"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        style="@style/tint_arrow"
                        android:scaleType="center"/>

                    <TextView
                        android:id="@+id/tvReason2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/text_sub_head"
                        android:textSize="17sp"
                        android:textAlignment="center"
                        android:text="Level 16"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="140dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="140dp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentEnd="true"
                            android:src="@drawable/pokeball"
                            android:alpha="0.3"
                            app:tint="#AEAEAE" />

                        <ImageView
                            android:id="@+id/ivPokemon4"
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginVertical="10dp"
                            android:scaleType="fitCenter" />



                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tvPokemonName4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/text_sub_head"
                        android:textSize="17sp"
                        android:textAlignment="center"
                        android:text="Charmander"/>

                </LinearLayout>


            </LinearLayout>




            <TextView
                android:id="@+id/tvPokemonName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:textSize="40dp"
                android:textStyle="bold"
                android:text="Bulbasaur"
                style="@style/text_head"
                android:alpha="0.20"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="15dp"
                app:layout_constraintTop_toBottomOf="@id/layoutEvolution2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginTop="20dp"
        style="@style/tint"
        android:src="@drawable/white_gradient_top_to_bottom" />

</FrameLayout>