<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.StatsFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardElevation="0dp"
        app:cardCornerRadius="25dp"/>


    <androidx.core.widget.NestedScrollView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="24dp">

            <TextView
                android:id="@+id/tvHead1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Base Stats"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <LinearLayout
                android:id="@+id/layoutBaseStatsData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="@id/tvHead1"
                app:layout_constraintTop_toBottomOf="@id/tvHead1"
                app:layout_constraintEnd_toEndOf="parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/text_content"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.3"
                        android:layout_marginEnd="4dp"
                        android:singleLine="true"
                        android:text="HP"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/tvHp"
                        style="@style/text_sub_head"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:singleLine="true"
                        android:text="Hp"
                        android:textSize="15dp" />

                    <com.google.android.material.progressindicator.LinearProgressIndicator
                        android:id="@+id/pbHp"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        app:trackCornerRadius="8dp"
                        android:layout_weight="3"
                        android:minHeight="10dp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/text_content"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.3"
                        android:layout_marginEnd="4dp"
                        android:singleLine="true"
                        android:text="Attack"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/tvAttack"
                        style="@style/text_sub_head"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:singleLine="true"
                        android:text="Hp"
                        android:textSize="15dp" />

                    <com.google.android.material.progressindicator.LinearProgressIndicator
                        android:id="@+id/pbAttack"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        app:trackCornerRadius="8dp"
                        android:layout_weight="3"
                        android:minHeight="10dp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/text_content"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.3"
                        android:layout_marginEnd="4dp"
                        android:singleLine="true"
                        android:text="Defense"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/tvDefense"
                        style="@style/text_sub_head"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:singleLine="true"
                        android:text="Hp"
                        android:textSize="15dp" />

                    <com.google.android.material.progressindicator.LinearProgressIndicator
                        android:id="@+id/pbDefense"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        app:trackCornerRadius="8dp"
                        android:layout_weight="3"
                        android:minHeight="10dp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/text_content"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.3"
                        android:layout_marginEnd="4dp"
                        android:singleLine="true"
                        android:text="Sp. Attack"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/tvSpAttack"
                        style="@style/text_sub_head"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:singleLine="true"
                        android:text="Hp"
                        android:textSize="15dp" />

                    <com.google.android.material.progressindicator.LinearProgressIndicator
                        android:id="@+id/pbSpAttack"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        app:trackCornerRadius="8dp"
                        android:layout_weight="3"
                        android:minHeight="10dp" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/text_content"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.3"
                        android:layout_marginEnd="4dp"
                        android:singleLine="true"
                        android:text="Sp. Defense"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/tvSpDefense"
                        style="@style/text_sub_head"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:singleLine="true"
                        android:text="Hp"
                        android:textSize="15dp" />

                    <com.google.android.material.progressindicator.LinearProgressIndicator
                        android:id="@+id/pbSpDefense"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        app:trackCornerRadius="8dp"
                        android:layout_weight="3"
                        android:minHeight="10dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/text_content"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.3"
                        android:layout_marginEnd="4dp"
                        android:singleLine="true"
                        android:text="Speed"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/tvSpeed"
                        style="@style/text_sub_head"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:singleLine="true"
                        android:text="Hp"
                        android:textSize="15dp" />

                    <com.google.android.material.progressindicator.LinearProgressIndicator
                        android:id="@+id/pbSpeed"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        app:trackCornerRadius="8dp"
                        android:maxHeight="10dp"
                        android:layout_weight="3" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/text_content"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.3"
                        android:layout_marginEnd="4dp"
                        android:singleLine="true"
                        android:text="Total"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/tvTotal"
                        style="@style/text_sub_head"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:singleLine="true"
                        android:text="Hp"
                        android:textSize="15dp" />

                    <com.google.android.material.progressindicator.LinearProgressIndicator
                        android:id="@+id/pbTotal"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        app:trackCornerRadius="8dp"
                        android:layout_weight="3" />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/tvHead2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Type Defenses"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="24dp"
                app:layout_constraintStart_toStartOf="@id/layoutBaseStatsData"
                app:layout_constraintTop_toBottomOf="@id/layoutBaseStatsData"/>

            <TextView
                android:id="@+id/tvInfo"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                style="@style/text_content"
                android:text="lorem ipsum"
                android:fontFamily="@font/myfont"
                app:layout_constraintStart_toStartOf="@id/tvHead2"
                app:layout_constraintTop_toBottomOf="@id/tvHead2" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvEffectiveness"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="-4dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/tvInfo"
                app:layout_constraintTop_toBottomOf="@id/tvInfo"
                android:layout_marginTop="10dp"/>


            <TextView
                android:id="@+id/tvPokemonName2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="40dp"
                android:textStyle="bold"
                android:text="Bulbasaur"
                style="@style/text_head"
                android:alpha="0.20"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"
                app:layout_constraintTop_toBottomOf="@id/rvEffectiveness"
                app:layout_constraintStart_toStartOf="@id/rvEffectiveness"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        style="@style/tint"
        android:src="@drawable/white_gradient_top_to_bottom" />

</FrameLayout>